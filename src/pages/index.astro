<style>
  body {
    text-align: center;
  }
  blockquote {
    font-size: 20px;
    font-style: italic;
    display: inline-block;
    margin: 20px;
    padding: 20px;
    background-color: #FFEAA3;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    border-radius: 10px;
  }
  .author {
    font-size: 14px;
    float: right;
    margin-right: 8px;
    margin-top: 8px;
  }
  .quote-background {
    background-color: #D3C947;
    width: 100%;
  }
  .quote-origin {
    padding: 40px;
    font-style: normal;
    font-size: 18px;
    width: 30%;
    margin: 40px auto;
    text-align: center;
  }
</style>
